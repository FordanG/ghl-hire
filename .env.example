# GHL Hire Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# Application
# =============================================================================
NEXT_PUBLIC_APP_URL=YOUR_APP_URL_HERE
NODE_ENV=YOUR_NODE_ENV_HERE

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL_HERE
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE

# =============================================================================
# Email Service (Resend)
# =============================================================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=YOUR_RESEND_API_KEY_HERE
RESEND_FROM_EMAIL=YOUR_FROM_EMAIL_HERE

# =============================================================================
# Payment Processing (Maya Payments)
# =============================================================================
# Get keys from https://developers.maya.ph/
# Sandbox keys for testing
MAYA_PUBLIC_KEY=YOUR_MAYA_PUBLIC_KEY_HERE
MAYA_SECRET_KEY=YOUR_MAYA_SECRET_KEY_HERE
MAYA_WEBHOOK_SECRET=YOUR_MAYA_WEBHOOK_SECRET_HERE
MAYA_API_URL=YOUR_MAYA_API_URL_HERE

# Production keys (uncomment for production)
# MAYA_PUBLIC_KEY=YOUR_MAYA_PRODUCTION_PUBLIC_KEY_HERE
# MAYA_SECRET_KEY=YOUR_MAYA_PRODUCTION_SECRET_KEY_HERE
# MAYA_WEBHOOK_SECRET=YOUR_MAYA_PRODUCTION_WEBHOOK_SECRET_HERE
# MAYA_API_URL=YOUR_MAYA_PRODUCTION_API_URL_HERE

# =============================================================================
# AI Features (OpenAI)
# =============================================================================
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_ORGANIZATION=YOUR_OPENAI_ORG_ID_HERE # Optional

# =============================================================================
# AI Voice Interviews (Vapi)
# =============================================================================
# Get API key from https://vapi.ai/
VAPI_API_KEY=YOUR_VAPI_API_KEY_HERE
VAPI_PHONE_NUMBER=YOUR_VAPI_PHONE_NUMBER_HERE

# =============================================================================
# n8n Workflow Integration
# =============================================================================
# Your n8n instance webhook URL for support tickets
N8N_SUPPORT_WEBHOOK_URL=YOUR_N8N_WEBHOOK_URL_HERE

# =============================================================================
# Error Monitoring (Sentry)
# =============================================================================
# Get DSN from https://sentry.io/settings/projects/your-project/keys/
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_SENTRY_DSN_HERE@sentry.io/YOUR_PROJECT_ID
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN_HERE # For source maps upload

# =============================================================================
# Analytics (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=YOUR_GA_MEASUREMENT_ID_HERE

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# =============================================================================
# File Upload & Storage
# =============================================================================
# Supabase Storage bucket names
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=YOUR_STORAGE_BUCKET_NAME_HERE
NEXT_PUBLIC_SUPABASE_LOGOS_BUCKET=YOUR_LOGOS_BUCKET_NAME_HERE

# Maximum file sizes (in bytes)
MAX_RESUME_SIZE=YOUR_MAX_RESUME_SIZE_HERE
MAX_LOGO_SIZE=YOUR_MAX_LOGO_SIZE_HERE

# =============================================================================
# Security
# =============================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_API=YOUR_API_RATE_LIMIT_HERE
RATE_LIMIT_AUTH=YOUR_AUTH_RATE_LIMIT_HERE
RATE_LIMIT_PAYMENTS=YOUR_PAYMENTS_RATE_LIMIT_HERE

# JWT Secret (for custom tokens, if needed)
JWT_SECRET=YOUR_JWT_SECRET_HERE

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features
ENABLE_AI_FEATURES=YOUR_AI_FEATURES_SETTING_HERE
ENABLE_VOICE_INTERVIEWS=YOUR_VOICE_INTERVIEWS_SETTING_HERE
ENABLE_BLOG=YOUR_BLOG_SETTING_HERE
ENABLE_RESOURCES=YOUR_RESOURCES_SETTING_HERE
ENABLE_MODERATION=YOUR_MODERATION_SETTING_HERE

# =============================================================================
# Third-Party Integrations
# =============================================================================
# Twilio (for SMS, if needed)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN_HERE
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER_HERE

# Slack (for notifications, if needed)
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL_HERE

# =============================================================================
# Development & Testing
# =============================================================================
# Enable debug logging
DEBUG=YOUR_DEBUG_SETTING_HERE
LOG_LEVEL=YOUR_LOG_LEVEL_HERE

# Bypass email in development
DEV_SKIP_EMAIL=YOUR_DEV_SKIP_EMAIL_SETTING_HERE

# Use test payment methods
USE_TEST_PAYMENTS=YOUR_TEST_PAYMENTS_SETTING_HERE
