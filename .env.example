# GHL Hire Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# Application
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# Email Service (Resend)
# =============================================================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=GHL Hire <noreply@ghlhire.com>

# =============================================================================
# Payment Processing (Maya Payments)
# =============================================================================
# Get keys from https://developers.maya.ph/
# Sandbox keys for testing
MAYA_PUBLIC_KEY=pk-test-your-public-key-here
MAYA_SECRET_KEY=sk-test-your-secret-key-here
MAYA_WEBHOOK_SECRET=whsec_your-webhook-secret-here
MAYA_API_URL=https://pg-sandbox.paymaya.com

# Production keys (uncomment for production)
# MAYA_PUBLIC_KEY=pk-live-your-public-key-here
# MAYA_SECRET_KEY=sk-live-your-secret-key-here
# MAYA_WEBHOOK_SECRET=whsec_your-webhook-secret-here
# MAYA_API_URL=https://pg.paymaya.com

# =============================================================================
# AI Features (OpenAI)
# =============================================================================
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION=org-your-org-id-here # Optional

# =============================================================================
# AI Voice Interviews (Vapi)
# =============================================================================
# Get API key from https://vapi.ai/
VAPI_API_KEY=your-vapi-api-key-here
VAPI_PHONE_NUMBER=+1234567890 # Your Vapi phone number

# =============================================================================
# n8n Workflow Integration
# =============================================================================
# Your n8n instance webhook URL for support tickets
N8N_SUPPORT_WEBHOOK_URL=https://your-n8n-instance.com/webhook/support

# =============================================================================
# Error Monitoring (Sentry)
# =============================================================================
# Get DSN from https://sentry.io/settings/projects/your-project/keys/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token # For source maps upload

# =============================================================================
# Analytics (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# =============================================================================
# File Upload & Storage
# =============================================================================
# Supabase Storage bucket names
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=resumes
NEXT_PUBLIC_SUPABASE_LOGOS_BUCKET=company-logos

# Maximum file sizes (in bytes)
MAX_RESUME_SIZE=5242880 # 5MB
MAX_LOGO_SIZE=2097152 # 2MB

# =============================================================================
# Security
# =============================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_PAYMENTS=10

# JWT Secret (for custom tokens, if needed)
JWT_SECRET=your-super-secret-jwt-key-here

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_VOICE_INTERVIEWS=false
ENABLE_BLOG=true
ENABLE_RESOURCES=true
ENABLE_MODERATION=true

# =============================================================================
# Third-Party Integrations
# =============================================================================
# Twilio (for SMS, if needed)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Slack (for notifications, if needed)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# Development & Testing
# =============================================================================
# Enable debug logging
DEBUG=false
LOG_LEVEL=info # error, warn, info, debug

# Bypass email in development
DEV_SKIP_EMAIL=false

# Use test payment methods
USE_TEST_PAYMENTS=true
