# GHL Hire Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# Application
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# Supabase Configuration
# =============================================================================
# Get these from https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_URL_HERE
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY_HERE

# =============================================================================
# Email Service (Resend)
# =============================================================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=YOUR_RESEND_API_KEY_HERE
RESEND_FROM_EMAIL=GHL Hire <noreply@yourdomain.com>

# =============================================================================
# Payment Processing (Maya Payments)
# =============================================================================
# Get keys from https://developers.maya.ph/
# Sandbox keys for testing
MAYA_PUBLIC_KEY=YOUR_MAYA_PUBLIC_KEY_HERE
MAYA_SECRET_KEY=YOUR_MAYA_SECRET_KEY_HERE
MAYA_WEBHOOK_SECRET=YOUR_MAYA_WEBHOOK_SECRET_HERE
MAYA_API_URL=https://pg-sandbox.paymaya.com

# Production keys (uncomment for production)
# MAYA_PUBLIC_KEY=YOUR_MAYA_PRODUCTION_PUBLIC_KEY_HERE
# MAYA_SECRET_KEY=YOUR_MAYA_PRODUCTION_SECRET_KEY_HERE
# MAYA_WEBHOOK_SECRET=YOUR_MAYA_PRODUCTION_WEBHOOK_SECRET_HERE
# MAYA_API_URL=https://pg.paymaya.com

# =============================================================================
# AI Features (OpenAI)
# =============================================================================
# Get API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_ORGANIZATION=YOUR_OPENAI_ORG_ID_HERE # Optional

# =============================================================================
# AI Voice Interviews (Vapi)
# =============================================================================
# Get API key from https://vapi.ai/
VAPI_API_KEY=YOUR_VAPI_API_KEY_HERE
VAPI_PHONE_NUMBER=YOUR_VAPI_PHONE_NUMBER_HERE

# =============================================================================
# n8n Workflow Integration
# =============================================================================
# Your n8n instance webhook URL for support tickets
N8N_SUPPORT_WEBHOOK_URL=YOUR_N8N_WEBHOOK_URL_HERE

# =============================================================================
# Error Monitoring (Sentry)
# =============================================================================
# Get DSN from https://sentry.io/settings/projects/your-project/keys/
NEXT_PUBLIC_SENTRY_DSN=https://YOUR_SENTRY_DSN_HERE@sentry.io/YOUR_PROJECT_ID
SENTRY_AUTH_TOKEN=YOUR_SENTRY_AUTH_TOKEN_HERE # For source maps upload

# =============================================================================
# Analytics (Optional)
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=YOUR_GA_MEASUREMENT_ID_HERE

# Vercel Analytics (automatically enabled on Vercel)
# No configuration needed

# =============================================================================
# File Upload & Storage
# =============================================================================
# Supabase Storage bucket names
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=resumes
NEXT_PUBLIC_SUPABASE_LOGOS_BUCKET=company-logos

# Maximum file sizes (in bytes)
MAX_RESUME_SIZE=5242880 # 5MB
MAX_LOGO_SIZE=2097152 # 2MB

# =============================================================================
# Security
# =============================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_API=100
RATE_LIMIT_AUTH=5
RATE_LIMIT_PAYMENTS=10

# JWT Secret (for custom tokens, if needed)
JWT_SECRET=YOUR_JWT_SECRET_HERE

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_VOICE_INTERVIEWS=false
ENABLE_BLOG=true
ENABLE_RESOURCES=true
ENABLE_MODERATION=true

# =============================================================================
# Third-Party Integrations
# =============================================================================
# Twilio (for SMS, if needed)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID_HERE
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN_HERE
TWILIO_PHONE_NUMBER=YOUR_TWILIO_PHONE_NUMBER_HERE

# Slack (for notifications, if needed)
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL_HERE

# =============================================================================
# Development & Testing
# =============================================================================
# Enable debug logging
DEBUG=false
LOG_LEVEL=info # error, warn, info, debug

# Bypass email in development
DEV_SKIP_EMAIL=false

# Use test payment methods
USE_TEST_PAYMENTS=true
